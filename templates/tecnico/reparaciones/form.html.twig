{% extends 'base.html.twig' %}

{% block title %}Formulario de Reparación{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">{{ reparacion is defined ? 'Editar Reparación' : 'Nueva Reparación' }}</h3>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(form.idProducto, 'Producto', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.idProducto, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.idProducto) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.idUser, 'Cliente', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.idUser, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.idUser) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.estado_reparacion, 'Estado de la Reparación', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.estado_reparacion, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.estado_reparacion) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.costo_reparacion, 'Costo de Reparación', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.costo_reparacion, {'attr': {'class': 'form-control', 'placeholder': 'Introduce el costo en €'}}) }}
                    {{ form_errors(form.costo_reparacion) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.fecha_entrada, 'Fecha de Entrada', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.fecha_entrada, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.fecha_entrada) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.fecha_salida, 'Fecha Estimada de Salida', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.fecha_salida, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.fecha_salida) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.descripcionUsuario, 'Descripción del Usuario', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.descripcionUsuario, {'attr': {'class': 'form-control', 'readonly': true}}) }}
                    {{ form_errors(form.descripcionUsuario) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.notaTecnico, 'Nota del Técnico', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.notaTecnico, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.notaTecnico) }}
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">{{ reparacion is defined ? 'Actualizar Reparación' : 'Registrar Reparación' }}</button>
                    <a href="{{ path('tecnico_consolas_dashboard') }}" class="btn btn-secondary">Cancelar</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
