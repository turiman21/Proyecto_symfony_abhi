{% extends 'base.html.twig' %}

{% block title %}Productos de Consolas Disponibles{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Productos de Consolas Disponibles</h1>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Precio Venta</th>
                    <th>Precio Alquiler</th>
                    <th>Marca</th>
                    <th>Estado</th>
                </tr>
                </thead>
                <tbody>
                {% for consola in consolas %}
                    <tr>
                        <td>{{ consola.nombre_producto }}</td>
                        <td>{{ consola.precio_venta | number_format(2, ',', '.') }} €</td>
                        <td>{{ consola.precio_alquiler | number_format(2, ',', '.') }} €</td>
                        <td>{{ consola.marca }}</td>
                        <td>{{ consola.estado }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">No hay consolas disponibles.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
