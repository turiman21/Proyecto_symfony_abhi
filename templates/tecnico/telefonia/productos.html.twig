{% extends 'base.html.twig' %}

{% block title %}Productos de Telefonía Disponibles{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Productos de Telefonía Disponibles</h1>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Precio Venta</th>
                    <th>Precio Alquiler</th>
                    <th>Marca</th>
                    <th>Estado</th>
                </tr>
                </thead>
                <tbody>
                {% for smartphone in smartphones %}
                    <tr>
                        <td>{{ smartphone.nombre_producto }}</td>
                        <td>{{ smartphone.precio_venta | number_format(2, ',', '.') }} €</td>
                        <td>{{ smartphone.precio_alquiler | number_format(2, ',', '.') }} €</td>
                        <td>{{ smartphone.marca }}</td>
                        <td>{{ smartphone.estado }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">No hay smartphones disponibles.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
