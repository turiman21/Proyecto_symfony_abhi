{% extends 'base.html.twig' %}

{% block title %}Editar Usuario{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Editar Usuario</h1>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="mb-3">
            {{ form_label(form.nombre, 'Nombre', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nombre) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.roles, 'Roles', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.roles, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.roles) }}
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success">Actualizar</button>
            <a href="{{ path('admin_usuario_index') }}" class="btn btn-secondary ms-3">Volver</a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
