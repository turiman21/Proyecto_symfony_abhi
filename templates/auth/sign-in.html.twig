{% extends 'base.html.twig' %}

{% block body %}
    <div class="sign-in-container">
        <h1>Sign In</h1>

        {% if error %}
            <div class="error">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('app_sign_in') }}" method="post" class="sign-in-form">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="{{ last_username }}" required autofocus />
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required />
            </div>

            <div class="form-group">
                <button type="submit" class="sign-in-button">Sign In</button>
            </div>
        </form>

        <div class="register-link">
            <p>¿No tienes cuenta? <a href="{{ path('app_register_bien') }}">Regístrate</a></p>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            font-family: 'Helvetica Neue', sans-serif;
        }

        .sign-in-container {
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            text-align: center;
            max-width: 400px;
            width: 100%;
        }

        h1 {
            color: #333;
            font-size: 2em;
            margin-bottom: 0.5em;
        }

        .error {
            color: #ff5252;
            background: #ffeaea;
            padding: 10px;
            margin-bottom: 1em;
            border-radius: 5px;
            font-weight: bold;
        }

        .form-group {
            margin-bottom: 1.5em;
            text-align: left;
        }

        .form-group label {
            display: block;
            color: #666;
            font-weight: bold;
            margin-bottom: 0.5em;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            font-size: 1em;
            border-radius: 5px;
            border: 1px solid #ddd;
            box-sizing: border-box;
            transition: border-color 0.3s;
        }

        .form-group input:focus {
            border-color: #007bff;
            outline: none;
        }

        .sign-in-button {
            width: 100%;
            padding: 12px;
            background: #007bff;
            color: #fff;
            font-size: 1.1em;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }

        .sign-in-button:hover {
            background: #0056b3;
        }

        .sign-in-button:active {
            transform: scale(0.98);
        }

        .register-link {
            margin-top: 1em;
            color: #666;
            font-size: 0.9em;
        }

        .register-link a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        .register-link a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}
